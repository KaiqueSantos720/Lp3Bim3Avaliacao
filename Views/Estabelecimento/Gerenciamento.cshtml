@model List<AvaliacaoLp3Bim3.ViewModels.EstabelecimentoViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Estabelecimentos";
}

<h1>Gerenciamento de Estabelecimentos</h1>
@if(Model.Count == 0)
{
    <p>Não há nenhum estabelecimento cadastrado.</p>
    <a class="a" href="/Estabelecimento/CadastrarEstabelecimento">Cadastre um estabelecimento</a>
}
else
{
    <p>A quantidade de estabelecimentos cadastrados é: @Model.Count</p>
    <hr>

    @foreach(var loja in Model)
    {
        <a class="a-title" href="/Estabelecimento/Show/@loja.Id">
            <h3>@loja.Nome</h3>
        </a>
        <p>@loja.Descricao</p>
        <a class="a" href="/Estabelecimento/Excluir/@loja.Id">Excluir</a>
        <hr>
    }

    <a class="a" href="/Estabelecimento/CadastrarEstabelecimento">Cadastre um estabelecimento</a>
}