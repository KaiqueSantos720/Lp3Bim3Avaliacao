@model List<AvaliacaoLp3Bim3.ViewModels.EstabelecimentoViewModel>

@{
    ViewData["Title"] = "Lista de Estabelecimento";
}

<h1>Estabelecimentos</h1>
@if(Model.Count == 0)
{
    <p>Não há nenhum estabelecimento cadastrado.</p>
}
else
{
    @foreach(var loja in Model)
    {
        <h3>@loja.Nome</h3>
        <p>@loja.Descricao</p>
        <hr>
    }
}